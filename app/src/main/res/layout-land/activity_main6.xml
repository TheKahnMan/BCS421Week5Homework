<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity6"
    android:orientation="horizontal">

    <Button
        android:id="@+id/q6btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <RadioGroup
        android:id="@+id/radioGroup6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <RadioButton
            android:id="@+id/q6b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Castlevania: Flute of Shadows"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q6b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Castlevania: Portrait of Ruin"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q6b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Castlevania: Rondo of Blood"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q6b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Castlevania: Aria of Sorrow"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/question6"
        android:layout_width="305dp"
        android:layout_height="97dp"
        android:text="Castlevania has had a lot of titles in the series with similar sounding titles. Which one of these isn't a real Castlevania game?"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/earned6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 6"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/question6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

</androidx.constraintlayout.widget.ConstraintLayout>