<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:context=".MainActivity7">

    <Button
        android:id="@+id/q7btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <RadioGroup
        android:id="@+id/radioGroup7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <RadioButton
            android:id="@+id/q7b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A rock"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q7b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Empire State building"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q7b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The weight of your sins"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q7b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your mother"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/question7"
        android:layout_width="298dp"
        android:layout_height="125dp"
        android:layout_marginTop="140dp"
        android:text="What is the heaviest object in the world?"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/earned7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 7"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/question7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

</androidx.constraintlayout.widget.ConstraintLayout>